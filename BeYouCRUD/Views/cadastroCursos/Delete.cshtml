@model BeYouCRUD.Models.cadastroCursos

<head>
    <link rel="stylesheet" href="~/css/layout.css">
    <link href="~/css/deletarDados.css" rel="stylesheet">
</head>

<body>
    <div class="dados">
        <div class="descricao">
            <h1>Deletar</h1>

            <h3>Tem certeza que deseja deletar?</h3>
        </div>

        <div>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Instituição:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.nome_instituicao)
                </dd>
                <dt class="col-sm-2">
                    Curso:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.curso)
                </dd>
                <dt class="col-sm-2">
                    Cidade - UF:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.cidade_UF)
                </dd>
                <dt class="col-sm-2">
                    Duração:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.duracao)
                </dd>
                <dt class="col-sm-2">
                    Turno:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.turno)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Deletar" class="btn btn-danger" /> |
                <a asp-action="verCursosIndicados" asp-controller="Home">Voltar</a>
            </form>
        </div>
    </div>
</body>
