@model BeYouCRUD.Models.cadastroVagasEmprego

<head>
    <link rel="stylesheet" href="~/css/layout.css">
    <link href="~/css/deletarDados.css" rel="stylesheet">
</head>

<body>
    <div class="dados">
        <div class="descricao">
            <h1>Deletar</h1>

            <h3>Tem certeza que deseja deletar?</h3>
        </div>

        <div>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Empresa:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.nome_empresa)
                </dd>
                <dt class="col-sm-2">
                    Cargo:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.cargo)
                </dd>
                <dt class="col-sm-2">
                    Cidade - UF:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.cidade_UF)
                </dd>
                <dt class="col-sm-2">
                    Salário:
                </dt>
                <dd class="col-sm-10">
                    R$ @Html.DisplayFor(model => model.salario)
                </dd>
                <dt class="col-sm-2">
                    Benefícios:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.beneficios)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Deletar" class="btn btn-danger" /> |
                <a asp-action="verVagasDeEmprego" asp-controller="Home">Voltar</a>
            </form>
        </div>
    </div>
</body>
