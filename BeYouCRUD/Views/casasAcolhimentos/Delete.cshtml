@model BeYouCRUD.Models.casasAcolhimento

<head>
    <link rel="stylesheet" href="~/css/layout.css">
    <link href="~/css/deletarDados.css" rel="stylesheet">
</head>

<body>
    <div class="dados">
        <div class="descricao">
            <h1>Deletar</h1>

            <h3>Tem certeza que deseja deletar?</h3>
        </div>

        <div>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Nome:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.nome_casa)
                </dd>
                <dt class="col-sm-2">
                    Site:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.site)
                </dd>
                <dt class="col-sm-2">
                    Estado:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.estado)
                </dd>
                <dt class="col-sm-2">
                    Cidade:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.cidade)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Deletar" class="btn btn-danger" /> |
                <a asp-action="verCasasIndicadas" asp-controller="Home">Voltar</a>
            </form>
        </div>
    </div>
</body>
